{
  "name": "monaco-components",
  "private": true,
  "scripts": {
    "clean": "npm run clean --workspaces",
    "clean:watch": "tsc --build tsconfig.build.json --clean",
    "dev": "vite",
    "dev:debug": "vite --debug --force",
    "watch": "tsc --build tsconfig.build.json --watch --verbose",
    "lint": "eslint {**/src/**/*.ts,**/src/**/*.tsx,**/test/**/*.ts,**/test/**/*.tsx}",
    "build": "npm run build --workspaces",
    "test": "vitest -c vitest.config.ts",
    "release:prepare": "npm run reset:repo && npm ci && npm run lint && npm run build",
    "reset:repo": "git clean -f -X -d"
  },
  "devDependencies": {
    "@types/node": "~18.17.3",
    "@types/shelljs": "~0.8.12",
    "@types/vscode": "~1.80.0",
    "@typescript-eslint/eslint-plugin": "~6.3.0",
    "@typescript-eslint/parser": "~6.3.0",
    "@vitest/browser": "~0.34.1",
    "editorconfig": "~2.0.0",
    "eslint": "~8.46.0",
    "path-browserify": "~1.0.1",
    "shelljs": "~0.8.5",
    "shx": "~0.3.4",
    "tslib": "~2.6.1",
    "typescript": "~5.1.6",
    "vite": "~4.4.9",
    "vite-node": "~0.34.1",
    "vitest": "~0.34.1",
    "webdriverio": "~8.14.3"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  },
  "workspaces": [
    "packages/monaco-editor-wrapper",
    "packages/monaco-editor-react",
    "packages/examples"
  ]
}
